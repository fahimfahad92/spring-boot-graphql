type Query {
    users: [User]
    userByID (id: Int): User
    userAddress(userId: Int): Address
}

type Mutation {
    addUser(name: String) : User
    addAddress(addressRequest: AddressRequest): User
}

type User {
    id: ID
    name: String
    address: Address
}

type Address {
    id: ID
    road: String
    house: String
    flat: String
}

input AddressRequest {
    userId: ID
    road: String
    house: String
    flat: String
}